doctype html
html(lang="en")
  head

    title COVID-19 Visualised
    link(rel='shortcut icon' type='image/x-icon' href='/favicon.ico')
    link(rel='stylesheet', href='/stylesheets/style.css')    
    link(rel="stylesheet" href="https://cdn.muicss.com/mui-0.10.1/css/mui.min.css")
    link(rel="stylesheet" href="/stylesheets/color.css")
    link(href="/stylesheets/dark.css" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto&display=swap" rel="stylesheet")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/slim-select/1.25.0/slimselect.min.js")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/slim-select/1.25.0/slimselect.min.css" rel="stylesheet")
    script(src="https://cdn.fusioncharts.com/fusioncharts/latest/fusioncharts.js")   
    
    
    script(type="text/javascript" src="https://cdn.fusioncharts.com/fusioncharts/latest/themes/fusioncharts.theme.fusion.js")
    script(type="text/javascript" src="https://cdn.fusioncharts.com/fusioncharts/latest/themes/fusioncharts.theme.candy.js")
    link(href='/stylesheets/fab.css' rel="stylesheet")
    
    script(src="/javascripts/font-awesome.js")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="description" content="COVID-19 (Singapore) in pictures")
    meta(name="author" content="Marcus Soh")
    meta(name="keywords" content="covid, singapore, graphs")
    meta(name="theme-color" content="#262a33")
  body
    .dark-changer
      .button-wrapper.center(id="dark-mode" onclick="toggleDarkMode()")
        a(class="styled" id="dark-mode-text") Enable dark mode
    .cover
    nav.container
      a.buttons(onclick="toggleDarkMode()")
      a.buttons(onclick="window.scrollTo(0,0);")
      a.buttons(onclick="window.scrollTo(0,document.body.scrollHeight)")
      a.buttons(href='create')
      a.buttons(href='/')
      
      a.buttons
      
    block content
    .footer
